 IF (size(request->facility_list,5) > 0)
  IF (size(request->unit_type_list,5) <= 0)
   SET stat = alterlist(request->unit_type_list,1)
   SET request->unit_type_list[1].unit_type_meaning = "ALL"
  ENDIF
