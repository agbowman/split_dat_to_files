 SUBROUTINE getunits(dummyvar)
   DECLARE fcnt = i4 WITH protect, noconstant(0)
   DECLARE ucnt = i4 WITH protect, noconstant(0)
   CALL echo("Loading units...")
   SELECT INTO "nl:"
    desc_sort = substring(1,60,cnvtupper(cv.description))
    FROM (dummyt d  WITH seq = value(size(request->facility_list,5))),
     (dummyt d2  WITH seq = value(size(request->unit_type_list,5))),
     nurse_unit nu,
     code_value cv
    PLAN (d
     WHERE (request->facility_list[d.seq].facility_code_value > 0.0))
     JOIN (nu
     WHERE (nu.loc_facility_cd=request->facility_list[d.seq].facility_code_value)
      AND nu.active_ind=1
      AND nu.beg_effective_dt_tm <= cnvtdatetime(curdate,curtime3)
      AND nu.end_effective_dt_tm >= cnvtdatetime(curdate,curtime3))
     JOIN (cv
     WHERE cv.code_value=nu.location_cd
      AND cv.active_ind=1
      AND cv.begin_effective_dt_tm <= cnvtdatetime(curdate,curtime3)
      AND cv.end_effective_dt_tm >= cnvtdatetime(curdate,curtime3))
     JOIN (d2
     WHERE cnvtupper(request->unit_type_list[d2.seq].unit_type_meaning) IN ("ALL", cv.cdf_meaning))
    ORDER BY d.seq, desc_sort, cv.code_value
    HEAD REPORT
     fcnt = 0, ucnt = 0
    HEAD d.seq
     ucnt = 0, fcnt = (fcnt+ 1)
     IF (fcnt > size(reply->facility_list,5))
      stat = alterlist(reply->facility_list,(fcnt+ 9))
     ENDIF
     reply->facility_list[fcnt].facility_code_value = nu.loc_facility_cd, reply->facility_list[fcnt].
     facility_display = uar_get_code_display(nu.loc_facility_cd), reply->facility_list[fcnt].
     facility_description = uar_get_code_description(nu.loc_facility_cd)
    HEAD cv.code_value
     ucnt = (ucnt+ 1)
     IF (ucnt > size(reply->facility_list[fcnt].unit_list,5))
      stat = alterlist(reply->facility_list[fcnt].unit_list,(ucnt+ 9))
     ENDIF
     reply->facility_list[fcnt].unit_list[ucnt].unit_code_value = cv.code_value, reply->
     facility_list[fcnt].unit_list[ucnt].unit_display = cv.display, reply->facility_list[fcnt].
     unit_list[ucnt].unit_description = cv.description,
     reply->facility_list[fcnt].unit_list[ucnt].unit_meaning = cv.cdf_meaning
    FOOT  d.seq
     stat = alterlist(reply->facility_list[fcnt].unit_list,ucnt)
    FOOT REPORT
     stat = alterlist(reply->facility_list,fcnt)
    WITH nocounter
   ;end select
   RETURN(true)
 END ;Subroutine
END GO
