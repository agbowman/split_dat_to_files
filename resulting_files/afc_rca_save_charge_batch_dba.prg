     chrgbatchreq->objarray[1].updt_cnt = c.updt_cnt
    WITH nocounter
   ;end select
   EXECUTE afc_da_upt_charge_batch  WITH replace("REQUEST",chrgbatchreq), replace("REPLY",
    chrgbatchrep)
